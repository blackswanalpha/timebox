{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "timebox-main",
  "version": "0.1.0",
  "identifier": "com.mbugua.timebox-main",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "title": "TimeBox",
        "width": 400,
        "height": 450,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "decorations": false,
        "transparent": true,
        "visible": true,
        "alwaysOnTop": true
      },
      {
        "label": "main",
        "title": "TimeBox",
        "width": 600,
        "height": 800,
        "center": true,
        "resizable": false,
        "visible": false,
        "closable": true,
        "decorations": false,
        "alwaysOnTop": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}